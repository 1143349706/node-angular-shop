<html ng-app="app">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" >
    <title>nodeShop - sklep komputerowy</title>
    <link rel="stylesheet" href="http://getbootstrap.com/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/shared.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.9/angular.min.js"></script>
    <script src="http://code.angularjs.org/1.2.9/angular-route.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/javascripts/application.js"></script>
</head>
<body>
    <div class="container">
        <header>
            <div class="container-auth pull-right">
                <% if (isAuthenticated) { %>
                    <span class="login-displayName"><strong>Zalogowany jako</strong>: <%= user.displayName %></span>
                    <% if (isAdmin) { %>
                        <a class="btn btn-primary" href="#/admin">
                            <span class="glyphicon glyphicon-list-alt"></span> Admin
                        </a>
                    <% } %>
                    <a class="btn btn-info" href="/#/cart">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Koszyk
                    </a>
                    <a class="btn btn-info" href="/auth/logout">
                        <span class="glyphicon glyphicon-remove"></span> Wyloguj
                    </a>
                <% } else { %>
                    <a class="btn btn-primary" href="/auth">
                        <span class="glyphicon glyphicon-user"></span> Zaloguj
                    </a>
                <% } %>
            </div>
            <a href="#/home">
                <img src="http://blog.redradix.com/wp-content/uploads/2013/07/Node.png" alt="Apple logo inc" class="header-logo pull-left" />
            </a>
            <div class="clearfix"></div>
        </header>
        <div class="content-separator clearfix"></div>
        <section class="content-section">
            <div class="row">
                <div class="col-md-3" ng-controller="SidebarCategoryController">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="panel-title"><span class="glyphicon glyphicon-th"></span> Kategorie ({{ categories.length }})</div>
                        </div>
                        <div class="panel-body">
                            <ul class="menu-sidebar-section">
                                <li ng-repeat="category in categories">
                                    <a href="#/category/{{ category.id }}" class="btn">
                                        {{ category.name }} <span class="label-product-count">({{ category.productCount }})</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="panel-title"><span class="glyphicon glyphicon-search"></span> Wyszukiwanie</div>
                        </div>
                        <div class="panel-body">
                            <%- include searchForm.ejs %>
                        </div>
                    </div>
                </div>
                <div class="col-md-9" ng-view></div>
            </div>
        </section>
        <footer class="text--right">
            All Rights reserved &copy; 2014R
        </footer>
    </div>
</body>
</html>
